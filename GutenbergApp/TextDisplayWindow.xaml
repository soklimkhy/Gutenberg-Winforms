<Window x:Class="GutenbergApp.TextDisplayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GutenbergApp"
        mc:Ignorable="d"
        Title="Book Detail" 
        Background="#383838"
        Height="920" 
        Width="662">

    <StackPanel>
        <Image x:Name="BookCover" 
               Width="200" 
               Height="300" 
               VerticalAlignment="Top" 
               Margin="10" />
        <Button Content="Download Book" 
                Click="DownloadBook"
                Background="#EEFB61"
                Foreground="#383838"
                Width="200" 
                Height="50"
                Margin="5"/>
        <TextBox x:Name="BookText" 
                 Foreground="#FFFFFF" 
                 Background="Transparent" 
                 Margin="10,10,10,10" 
                 TextWrapping="Wrap" 
                 VerticalScrollBarVisibility="Auto" 
                 Height="480" />
        
    </StackPanel>
</Window>
